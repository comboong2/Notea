<!-- 문제 2: 진행률 그래프 및 분류 표시 문제 해결 -->
<UserControl x:Class="SP.Modules.Common.Views.SubjectProgressListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SP.Modules.Common.Views"
             xmlns:converters="clr-namespace:SP.Converters" 
             Height="Auto" Width="Auto"
             AllowDrop="True"
             Drop="SubjectProgressListView_Drop"
             DragOver="SubjectProgressListView_DragOver">

    <UserControl.Resources>
        <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
        <converters:DynamicProgressToWidthConverter x:Key="DynamicProgressToWidthConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>

        <Style x:Key="ToDoCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="CheckBoxBorder"
                                    BorderBrush="#555555"
                                    BorderThickness="2"
                                    Background="White"
                                    Width="20" Height="20"
                                    CornerRadius="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Path x:Name="CheckMark"
                                      Width="10" Height="10"
                                      Stretch="Fill"
                                      Data="M 0,0 L 4,4 L 8,0 M 4,4 L 8,8"
                                      Stroke="Black"
                                      StrokeThickness="2"
                                      Visibility="Collapsed" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Border x:Name="DropTargetBorder">
        <!-- 과목 리스트 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <ItemsControl ItemsSource="{Binding Subjects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,10">
                                <!-- 과목 헤더 -->
                                <Grid Height="60">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 과목명 -->
                                    <TextBlock Grid.Column="0" Text="{Binding SubjectName}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"
                                                   MouseLeftButtonDown="SubjectName_MouseLeftButtonDown"
                                                   MouseMove="SubjectName_MouseMove"
                                                   Background="Transparent"/>

                                    <!-- 진행률 바 -->
                                    <Border Grid.Column="1" Height="20" VerticalAlignment="Center" Margin="10,0"
                                                ToolTip="{Binding Tooltip}" x:Name="ProgressBarContainer"
                                                BorderBrush="#DDDDDD" BorderThickness="1">
                                        <Grid>
                                            <Rectangle Fill="#F5F5F5"/>
                                            <Rectangle Fill="#4CAF50" HorizontalAlignment="Left">
                                                <Rectangle.Width>
                                                    <MultiBinding Converter="{StaticResource DynamicProgressToWidthConverter}">
                                                        <Binding Path="Progress"/>
                                                        <Binding Path="ActualWidth" ElementName="ProgressBarContainer"/>
                                                    </MultiBinding>
                                                </Rectangle.Width>
                                            </Rectangle>
                                            <!-- 진행률 텍스트 표시 -->
                                            <TextBlock Text="{Binding Progress, StringFormat=P0}" 
                                                           HorizontalAlignment="Center" 
                                                           VerticalAlignment="Center" 
                                                           FontSize="10" 
                                                           Foreground="Black"/>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- TopicGroups 표시 - 수정된 부분 -->
                                <ItemsControl ItemsSource="{Binding TopicGroups}" Margin="20,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,5">
                                                <!-- 분류 제목 - 드래그 가능하도록 추가 -->
                                                <Grid Height="40"
                                                      MouseLeftButtonDown="TopicGroup_MouseLeftButtonDown"
                                                      MouseMove="TopicGroup_MouseMove"
                                                      Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="2*"/>
                                                        <ColumnDefinition Width="3*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding GroupTitle}" 
                                                               FontSize="14" FontWeight="SemiBold" 
                                                               VerticalAlignment="Center" Margin="10,0"/>

                                                    <!-- 분류 진행률 바 -->
                                                    <Border Grid.Column="1" Height="15" VerticalAlignment="Center" Margin="10,0"
                                                            ToolTip="{Binding GroupTitle}" x:Name="TopicGroupProgressContainer"
                                                            BorderBrush="#CCCCCC" BorderThickness="1">
                                                        <Grid>
                                                            <Rectangle Fill="#F0F0F0"/>
                                                            <Rectangle Fill="#2196F3" HorizontalAlignment="Left">
                                                                <Rectangle.Width>
                                                                    <MultiBinding Converter="{StaticResource DynamicProgressToWidthConverter}">
                                                                        <Binding Path="ProgressRatio"/>
                                                                        <Binding Path="ActualWidth" ElementName="TopicGroupProgressContainer"/>
                                                                    </MultiBinding>
                                                                </Rectangle.Width>
                                                            </Rectangle>
                                                        </Grid>
                                                    </Border>

                                                    <!-- 체크박스 -->
                                                    <CheckBox Grid.Column="2" Style="{StaticResource ToDoCheckBoxStyle}" 
                                                              VerticalAlignment="Center" Margin="0,0,10,0"/>
                                                </Grid>

                                                <!-- 개별 토픽 아이템들 (드래그 기능 없음) -->
                                                <ItemsControl ItemsSource="{Binding Topics}" Margin="20,0,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Height="35" Margin="0,2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="2*"/>
                                                                    <ColumnDefinition Width="3*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <CheckBox Grid.Column="0" Width="15" Height="15" 
                                                                          Style="{StaticResource ToDoCheckBoxStyle}"
                                                                          VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                <TextBlock Grid.Column="1" Text="{Binding Name}" 
                                                                           FontSize="12" VerticalAlignment="Center"/>

                                                                <!-- 개별 아이템 진행률 -->
                                                                <Border Grid.Column="2" Height="12" VerticalAlignment="Center" Margin="10,0"
                                                                        ToolTip="{Binding ProgressTooltip}" x:Name="TopicItemProgressContainer"
                                                                        BorderBrush="#CCCCCC" BorderThickness="1">
                                                                    <Grid>
                                                                        <Rectangle Fill="#EEEEEE"/>
                                                                        <Rectangle Fill="#FF9800" HorizontalAlignment="Left">
                                                                            <Rectangle.Width>
                                                                                <MultiBinding Converter="{StaticResource DynamicProgressToWidthConverter}">
                                                                                    <Binding Path="Progress"/>
                                                                                    <Binding Path="ActualWidth" ElementName="TopicItemProgressContainer"/>
                                                                                </MultiBinding>
                                                                            </Rectangle.Width>
                                                                        </Rectangle>
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>