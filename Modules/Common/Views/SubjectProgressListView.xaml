<UserControl x:Class="SP.Modules.Common.Views.SubjectProgressListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SP.Modules.Common.Views"
             xmlns:converters="clr-namespace:SP.Converters" 
             Height="Auto" Width="Auto"
             AllowDrop="True"
             Drop="SubjectProgressListView_Drop"
             DragOver="SubjectProgressListView_DragOver">

    <UserControl.Resources>
        <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>

        <Style x:Key="ToDoCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent">
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CheckStates">
                                    <VisualState x:Name="Checked">
                                        <Storyboard>
                                            <ObjectAnimationUsingKeyFrames Storyboard.TargetName="CheckMark" Storyboard.TargetProperty="Visibility">
                                                <DiscreteObjectKeyFrame KeyTime="0">
                                                    <DiscreteObjectKeyFrame.Value>
                                                        <Visibility>Visible</Visibility>
                                                    </DiscreteObjectKeyFrame.Value>
                                                </DiscreteObjectKeyFrame>
                                            </ObjectAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Unchecked" />
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Border x:Name="CheckBoxBorder"
                                    BorderBrush="#555555"
                                    BorderThickness="2"
                                    Background="White"
                                    Width="20" Height="20"
                                    CornerRadius="2"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                <Path x:Name="CheckMark"
                                      Width="10" Height="10"
                                      Stretch="Fill"
                                      Data="M 0,0 L 4,4 L 8,0 M 4,4 L 8,8"
                                      Stroke="Black"
                                      StrokeThickness="2"
                                      Visibility="Collapsed" />
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 드롭 시 시각적 피드백을 위한 스타일 -->
        <Style x:Key="DropTargetStyle" TargetType="Border">
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="Tag" Value="DragOver">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="2"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>

    <Border x:Name="DropTargetBorder" Style="{StaticResource DropTargetStyle}">
        <!-- 과목 리스트 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical">
                <ItemsControl ItemsSource="{Binding Subjects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,0">
                                <Grid Height="60">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- 과목명 -->
                                    <TextBlock Grid.Column="0" Text="{Binding SubjectName}" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"
                                               MouseLeftButtonDown="SubjectName_MouseLeftButtonDown"
                                               MouseMove="SubjectName_MouseMove"
                                               Background="Transparent"/>

                                    <!-- 진행률 바 -->
                                    <Border Grid.Column="1" Height="20" VerticalAlignment="Center"
                                            ToolTip="{Binding Tooltip}" x:Name="ProgressBarContainer">
                                        <Grid>
                                            <Rectangle Fill="#DDDDDD"/>
                                            <Rectangle Fill="Black" HorizontalAlignment="Left">
                                                <Rectangle.Width>
                                                    <MultiBinding Converter="{StaticResource DynamicProgressToWidthConverter}">
                                                        <Binding Path="Progress"/>
                                                        <Binding Path="ActualWidth" ElementName="ProgressBarContainer"/>
                                                    </MultiBinding>
                                                </Rectangle.Width>
                                            </Rectangle>
                                        </Grid>
                                    </Border>
                                </Grid>

                                <!-- TopicGroups -->
                                <ItemsControl ItemsSource="{Binding TopicGroups}" Margin="10,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel>
                                                <ItemsControl ItemsSource="{Binding Topics}">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Grid Height="60">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <ColumnDefinition Width="1*"/>
                                                                    <ColumnDefinition Width="1*"/>
                                                                </Grid.ColumnDefinitions>

                                                                <CheckBox Width="20" Height="20" Style="{StaticResource ToDoCheckBoxStyle}"
                                                                          VerticalAlignment="Center" Margin="0,0,10,0"/>

                                                                <TextBlock Grid.Column="1" Text="{Binding Name}" FontWeight="Bold" FontSize="14" VerticalAlignment="Center"/>

                                                                <Border Grid.Column="2" Height="20" VerticalAlignment="Center"
                                                                        ToolTip="{Binding ProgressTooltip}">
                                                                    <Grid>
                                                                        <Rectangle Fill="#EEEEEE"/>
                                                                        <Rectangle Fill="Black" HorizontalAlignment="Right"
                                                                                   Width="{Binding Progress, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=200}"/>
                                                                    </Grid>
                                                                </Border>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>