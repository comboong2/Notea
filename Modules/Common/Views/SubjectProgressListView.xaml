<!-- 과목 체크박스 제거, 우측정렬 진행률, 툴팁 및 체크상태 유지 기능 추가 -->
<UserControl x:Class="SP.Modules.Common.Views.SubjectProgressListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:SP.Modules.Common.Views"
             xmlns:converters="clr-namespace:SP.Converters" 
             Height="Auto" Width="Auto"
             AllowDrop="True"
             Drop="SubjectProgressListView_Drop"
             DragOver="SubjectProgressListView_DragOver">

    <UserControl.Resources>
        <converters:ProgressToWidthConverter x:Key="ProgressToWidthConverter"/>
        <converters:DynamicProgressToWidthConverter x:Key="DynamicProgressToWidthConverter"/>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
    </UserControl.Resources>

    <Border x:Name="DropTargetBorder">
        <!-- 과목 리스트 -->
        <ScrollViewer VerticalScrollBarVisibility="Auto">
            <StackPanel Orientation="Vertical" Margin="0,10">
                <ItemsControl ItemsSource="{Binding Subjects}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,0,0,15">
                                <!-- 과목 헤더 - 체크박스 제거 -->
                                <Grid Height="40" Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="250"/>
                                        <!-- 과목명 (체크박스 제거로 인해 확장) -->
                                        <ColumnDefinition Width="*"/>
                                        <!-- 프로그레스 바 컨테이너 -->
                                    </Grid.ColumnDefinitions>

                                    <!-- 과목명 -->
                                    <TextBlock Grid.Column="0" 
                                               Text="{Binding SubjectName}" 
                                               FontSize="16" 
                                               FontWeight="Bold" 
                                               VerticalAlignment="Center"
                                               MouseLeftButtonDown="SubjectName_MouseLeftButtonDown"
                                               MouseMove="SubjectName_MouseMove"
                                               Background="Transparent"/>

                                    <!-- 프로그레스 바 컨테이너 - 우측 50%만 사용 -->
                                    <Grid Grid.Column="1" 
                                          VerticalAlignment="Center" 
                                          Margin="20,0,0,0">
                                        <Border Height="20" 
                                                Background="#F0F0F0"
                                                HorizontalAlignment="Right"
                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=0.5}"
                                                ToolTip="{Binding StudyTimeText}">
                                            <Rectangle Fill="#000000"
                                                       HorizontalAlignment="Right">
                                                <Rectangle.Width>
                                                    <MultiBinding Converter="{StaticResource DynamicProgressToWidthConverter}">
                                                        <Binding Path="Progress"/>
                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border}"/>
                                                    </MultiBinding>
                                                </Rectangle.Width>
                                            </Rectangle>
                                        </Border>
                                    </Grid>
                                </Grid>

                                <!-- TopicGroups 표시 - 들여쓰기 조정 (체크박스 크기만큼 감소) -->
                                <ItemsControl ItemsSource="{Binding TopicGroups}" Margin="20,0,0,0">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Margin="0,5">
                                                <!-- 분류 제목 -->
                                                <Grid Height="40"
                                                      MouseLeftButtonDown="TopicGroup_MouseLeftButtonDown"
                                                      MouseMove="TopicGroup_MouseMove"
                                                      Background="Transparent">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <!-- 체크박스 -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- 분류명 -->
                                                        <ColumnDefinition Width="*"/>
                                                        <!-- 프로그레스 바 컨테이너 -->
                                                    </Grid.ColumnDefinitions>

                                                    <!-- 분류 체크박스 -->
                                                    <CheckBox Grid.Column="0" 
                                                              Style="{StaticResource ToDoCheckBoxStyle}"
                                                              VerticalAlignment="Center" 
                                                              Margin="0,0,15,0"
                                                              IsChecked="{Binding IsCompleted, Mode=TwoWay}"/>

                                                    <!-- 분류명 -->
                                                    <TextBlock Grid.Column="1" 
                                                               Text="{Binding GroupTitle}" 
                                                               FontSize="14" 
                                                               FontWeight="SemiBold" 
                                                               VerticalAlignment="Center"/>

                                                    <!-- 분류 프로그레스 바 - 우측 50%만 사용 -->
                                                    <Grid Grid.Column="2" 
                                                          VerticalAlignment="Center" 
                                                          Margin="20,0,0,0">
                                                        <Border Height="20" 
                                                                Background="#F0F0F0"
                                                                HorizontalAlignment="Right"
                                                                Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=0.5}"
                                                                ToolTip="{Binding StudyTimeTooltip}">
                                                            <Rectangle Fill="#000000"
                                                                       HorizontalAlignment="Right">
                                                                <Rectangle.Width>
                                                                    <MultiBinding Converter="{StaticResource DynamicProgressToWidthConverter}">
                                                                        <Binding Path="ProgressRatio"/>
                                                                        <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border}"/>
                                                                    </MultiBinding>
                                                                </Rectangle.Width>
                                                            </Rectangle>
                                                        </Border>
                                                    </Grid>
                                                </Grid>

                                                <!-- 개별 토픽 아이템들 - 들여쓰기 조정 -->
                                                <ItemsControl ItemsSource="{Binding Topics}" Margin="35,0,0,0">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <!-- 토픽 아이템 -->
                                                            <Grid Height="40" Margin="0,2">
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="Auto"/>
                                                                    <!-- 체크박스 -->
                                                                    <ColumnDefinition Width="*"/>
                                                                    <!-- 토픽명 -->
                                                                    <ColumnDefinition Width="*"/>
                                                                    <!-- 프로그레스 바 컨테이너 -->
                                                                </Grid.ColumnDefinitions>

                                                                <!-- 토픽 체크박스 -->
                                                                <CheckBox Grid.Column="0" 
                                                                          Style="{StaticResource ToDoCheckBoxStyle}"
                                                                          VerticalAlignment="Center" 
                                                                          Margin="0,0,15,0"
                                                                          IsChecked="{Binding IsCompleted, Mode=TwoWay}"/>

                                                                <!-- 토픽명 -->
                                                                <TextBlock Grid.Column="1" 
                                                                           Text="{Binding Name}" 
                                                                           FontSize="12" 
                                                                           VerticalAlignment="Center"/>

                                                                <!-- 토픽 프로그레스 바 - 우측 50%만 사용 -->
                                                                <Grid Grid.Column="2" 
                                                                      VerticalAlignment="Center" 
                                                                      Margin="20,0,0,0">
                                                                    <Border Height="20" 
                                                                            Background="#F0F0F0"
                                                                            HorizontalAlignment="Right"
                                                                            Width="{Binding ActualWidth, RelativeSource={RelativeSource AncestorType=Grid}, Converter={StaticResource ProgressToWidthConverter}, ConverterParameter=0.5}"
                                                                            ToolTip="{Binding ProgressTooltip}">
                                                                        <Rectangle Fill="#000000"
                                                                                   HorizontalAlignment="Right">
                                                                            <Rectangle.Width>
                                                                                <MultiBinding Converter="{StaticResource DynamicProgressToWidthConverter}">
                                                                                    <Binding Path="Progress"/>
                                                                                    <Binding Path="ActualWidth" RelativeSource="{RelativeSource AncestorType=Border}"/>
                                                                                </MultiBinding>
                                                                            </Rectangle.Width>
                                                                        </Rectangle>
                                                                    </Border>
                                                                </Grid>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                </ItemsControl>
                                            </StackPanel>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>