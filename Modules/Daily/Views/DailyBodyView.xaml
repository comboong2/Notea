<UserControl x:Class="SP.Modules.Daily.Views.DailyBodyView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
             xmlns:common="clr-namespace:SP.Modules.Common.Views"
             xmlns:daily="clr-namespace:SP.Modules.Daily.Views"
             xmlns:converters="clr-namespace:SP.Converters" Background="White">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <converters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter"/>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>

        <!-- ✅ 상단 Comment + 실제 측정 정보 영역 -->
        <Border Grid.Row="0" BorderThickness="0,0,0,2" BorderBrush="#555555">
            <Grid Height="100" Margin="20,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="11*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="3*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Text="comment" FontSize="16" FontWeight="SemiBold" Foreground="Black" Margin="0,10,0,4"/>

                    <Grid Grid.Row="1">
                        <Grid>
                            <TextBox x:Name="CommentTextBox"
                                     Text="{Binding Comment, UpdateSourceTrigger=PropertyChanged}"
                                     FontSize="18"
                                     FontWeight="Normal"
                                     Foreground="Black"
                                     Background="Transparent"
                                     TextWrapping="Wrap"
                                     BorderThickness="0"
                                     VerticalAlignment="Stretch"
                                     VerticalContentAlignment="Top"
                                     KeyDown="CommentTextBox_KeyDown">
                                <TextBox.InputBindings>
                                    <KeyBinding Key="Enter" Command="{x:Null}" />
                                </TextBox.InputBindings>
                            </TextBox>

                            <!-- Placeholder -->
                            <TextBlock Text="comment"
                                       FontSize="18"
                                       FontWeight="Normal"
                                       Foreground="#999999"
                                       IsHitTestVisible="False"
                                       Margin="2,2,0,0"
                                       Visibility="{Binding Text, ElementName=CommentTextBox, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"/>
                        </Grid>
                    </Grid>
                </Grid>

                <Rectangle Grid.Column="1" Margin="10,0" Fill="#555555" Width="2" Height="80" VerticalAlignment="Center"/>

                <!-- ✅ 우측 정보 - 실제 측정 시간만 표시 -->
                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Center">
                    <TextBlock Text="{Binding InfoTitle}" FontSize="16" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="{Binding InfoContent}" FontSize="32" FontWeight="Bold" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- ✅ 하단 과목 진행률 + Todo 리스트 영역 -->
        <Grid Grid.Row="1" Margin="0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- ✅ 실제 측정된 시간 기반 과목 진행률 표시 -->
            <common:SubjectProgressListView Grid.Row="0" 
                                            Subjects="{Binding Subjects}" 
                                            DataContext="{Binding}"
                                            Margin="20,0"/>

            <Border Background="#555555" Height="2" VerticalAlignment="Bottom" Margin="0,0,0,0"/>

            <!-- TodoList 영역 -->
            <Grid Grid.Row="1" Margin="20,0">
                <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="300">
                    <ItemsControl ItemsSource="{Binding TodoList}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <!-- 체크 박스 -->
                                    <CheckBox Width="20" Height="20"
                                              IsChecked="{Binding IsCompleted, Mode=TwoWay}"
                                              Style="{StaticResource ToDoCheckBoxStyle}"
                                              VerticalAlignment="Center"
                                              Margin="0,0,10,0" />

                                    <!-- 텍스트: 체크 여부에 따라 취소선 -->
                                    <TextBlock Text="{Binding Title}" FontSize="16" VerticalAlignment="Center">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextDecorations" Value="{x:Null}" />
                                                <Setter Property="Foreground" Value="Black" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                                        <Setter Property="TextDecorations" Value="Strikethrough" />
                                                        <Setter Property="Foreground" Value="Gray" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>

                                        <!-- 삭제 메뉴 -->
                                        <TextBlock.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="삭제"
                                                          Click="DeleteTodo_Click"
                                                          Tag="{Binding}" />
                                            </ContextMenu>
                                        </TextBlock.ContextMenu>

                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <!-- Todo 추가 영역 -->
            <Grid Grid.Row="2" Margin="0,10,0,0" Height="60">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <Border Background="#DDDDDD">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdding}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Border.InputBindings>
                        <MouseBinding MouseAction="LeftClick" Command="{Binding StartAddCommand}" />
                    </Border.InputBindings>
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <svgc:SvgViewbox Source="/Resources/Images/add_todo.svg" Width="20" Height="20" Margin="20,0"/>
                        <TextBlock Text="추가" FontWeight="Light" FontSize="16" VerticalAlignment="Center"/>
                    </StackPanel>
                </Border>

                <Border Background="#DDDDDD">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsAdding}" Value="True">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <svgc:SvgViewbox Grid.Column="0" Source="/Resources/Images/check_default.svg" Width="20" Height="20" Margin="20,0"/>
                        <TextBox x:Name="TodoAddBox" Grid.Column="1" BorderThickness="0" Background="Transparent" FontSize="16" FontFamily="Pretendard"
                                 Foreground="#555555" VerticalContentAlignment="Center" Text="{Binding NewTodoText, UpdateSourceTrigger=PropertyChanged}"
                                 IsVisibleChanged="TodoAddBox_IsVisibleChanged">
                            <TextBox.InputBindings>
                                <KeyBinding Key="Enter" Command="{Binding AddTodoCommand}" />
                            </TextBox.InputBindings>
                        </TextBox>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Border Grid.Row="1" Background="#555555" Height="2" VerticalAlignment="Bottom" Margin="0,0,0,0"/>
    </Grid>
</UserControl>