<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://applicatiom:,,,/Fonts/#Pretendard Variable Thin"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="pack://applicatiom:,,,/Fonts/#Pretendard Variable Thin"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="pack://applicatiom:,,,/Fonts/#Pretendard Variable Thin"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="pack://applicatiom:,,,/Fonts/#Pretendard Variable Thin"/>
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="pack://applicatiom:,,,/Fonts/#Pretendard Variable Thin"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="pack://applicatiom:,,,/Fonts/#Pretendard Variable Thin"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="titleStyle">
        <Setter Property="FontSize" Value="32px"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="subjectTitleStyle">
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="subjectCategoryStyle">
        <Setter Property="FontSize" Value="14px"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="weekStyle">
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="day">
        <Setter Property="FontSize" Value="20px"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="dayEvent">
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="memo">
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBox" x:Key="Note">
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    <Style TargetType="TextBox" x:Key="NoteSubTitle">
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="comment">
        <Setter Property="FontSize" Value="18px"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

</ResourceDictionary>