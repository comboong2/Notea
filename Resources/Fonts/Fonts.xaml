<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="Label">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="Button">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="CheckBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>
    <Style TargetType="ComboBox">
        <Setter Property="FontFamily" Value="pack://application:,,,/Resources/Fonts/#Pretendard Variable"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="titleStyle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="subjectTitleStyle">
        <Setter Property="FontSize" Value="16px"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="subjectCategoryStyle">
        <Setter Property="FontSize" Value="14px"/>
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>

    <Style TargetType="Label" x:Key="weekStyle">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="HorizontalAlignment" Value="Left"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="10, 6, 0, 0"/>

    </Style>

    <Style TargetType="TextBlock" x:Key="day">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="dayEvent">
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="#ffffff"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="eventInfoTitle">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="memo">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="CalendarDayComment">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

    <Style TargetType="TextBox" x:Key="Note">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>
    <Style TargetType="TextBox" x:Key="tboxTitleStyle">
        <Setter Property="FontSize" Value="24"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Margin" Value="0"/>
    </Style>

    <Style TargetType="TextBox" x:Key="eventDetailInfo">
        <Setter Property="BorderThickness" Value="0.5"/>
        <Setter Property="BorderBrush" Value="gray"/>
        <Setter Property="FontWeight" Value="Medium"/>
    </Style>


    <Style TargetType="TextBox" x:Key="comment">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
    </Style>

</ResourceDictionary>