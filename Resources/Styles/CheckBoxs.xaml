<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:svgc="http://sharpvectors.codeplex.com/svgc/"
                    >
    <Style x:Key="ToDoCheckBoxStyle" TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <svgc:SvgViewbox x:Name="CheckIcon"
                                     Source="/Resources/Images/check_default.svg" Width="20" Height="20"/>
                        <ContentPresenter Margin="4,0,0,0"
                                      VerticalAlignment="Center"/>
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!-- 마우스 오버 시 아이콘 변경 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="CheckIcon"
                                Property="Source"
                                Value="/Resources/Images/check_hover.svg"/>
                        </Trigger>
                        <!-- 체크 상태일 때 아이콘 변경 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="CheckIcon"
                                Property="Source"
                                Value="/Resources/Images/check_checked.svg"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


</ResourceDictionary>